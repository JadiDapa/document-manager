generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

// ENUMS
enum Role {
  ADMIN
  GUEST
}

enum FileType {
  PDF
  DOC
  VIDEO
  IMAGE
  EXCEL
  OTHER
}

enum DocumentType {
  PROCEDURE
  REGULATION
  ANNOUCEMENT
  REPORTS
  OTHER
}

model User {
  id        String   @id @default(uuid())
  username  String
  fullName  String
  role      Role     @default(GUEST)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Section {
  id          String   @id @default(uuid())
  name        String
  description String?
  items       Item[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Item {
  id          String     @id @default(uuid())
  name        String
  description String?
  sectionId   String
  section     Section    @relation(fields: [sectionId], references: [id])
  documents   Document[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Document {
  id          String       @id @default(uuid())
  title       String
  description String?
  type        DocumentType
  fileType    FileType
  fileUrl     String
  itemId      String
  item        Item         @relation(fields: [itemId], references: [id])
  views       Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}
